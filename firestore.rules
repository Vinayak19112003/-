rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows a user to read and write any document
    // within their own user-specific collection. The wildcard {document=**}
    // ensures this access applies to all sub-collections like 'trades' and 'settings'.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
