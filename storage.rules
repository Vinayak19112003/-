
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write to their own 'screenshots' folder.
    // The path segments match the user's UID.
    match /users/{userId}/screenshots/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

    