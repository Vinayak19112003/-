rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // This rule allows a user to upload, read, and delete any file
    // within their own user-specific folder in Firebase Storage.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
